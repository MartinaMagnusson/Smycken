
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminHome</title>
</head>
<body>
    <div class="container adminMainContaioner">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="adminCMSDiv col-sm-6">
                        <h4 class="adminH4">Smycke</h4>
                        <p class="adminParagraph">
                            @Html.ActionLink("Lägg till smycke", "AddJewelry", "Admin")
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </p>
                        <p class="adminParagraph">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            @Html.ActionLink("Redigera smycke", "EditJewelry", "Admin")
                        </p>
                        <p class="adminParagraph">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            @Html.ActionLink("Ta bort smycke", "RemoveJewelry", "Admin")
                        </p>
                    </div>
                    <div class="adminCMSDiv carousel col-sm-6">
                        <h4 class="adminH4">Bildkarusell</h4>
                        <p class="adminParagraph">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            @Html.ActionLink("Lägg till bild", "AddImageToCarousel", "Admin")
                        </p>
                        <p class="adminParagraph">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            @Html.ActionLink("Redigera bild", "EditImageInCarousel", "Admin")
                        </p>
                        <p class="adminParagraph">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            @Html.ActionLink("Ta bort bild", "RemoveImageFromCarousel", "Admin")
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="row">
                    <div class="adminCMSDiv admin-news col-sm-6">
                        <h4 class="adminH4">Nyheter</h4>
                        <p class="adminParagraph">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            @Html.ActionLink("Lägg till nyhet", "AddImageToNewsRoom", "Admin")
                        </p>
                        <p class="adminParagraph">
                            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                            @Html.ActionLink("Redigera nyhet", "EditImageInNewsRoom", "Admin")
                        </p>
                        <p class="adminParagraph">
                            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                            @Html.ActionLink("Ta bort nyhet", "RemoveImageFromNewsRoom", "Admin")
                        </p>
                    </div>

                    <div class="adminCMSDiv messages col-sm-6">
                        <h4 class="adminH4">Mina meddelanden</h4>
                        <p class="adminParagraph">
                            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                            <a href="@Url.Action("Messages", "Admin")">
                                Läs meddelanden
                                @Html.Action("UnreadMessages", "Admin")
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
