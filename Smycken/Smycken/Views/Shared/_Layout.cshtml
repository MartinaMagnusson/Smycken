                    <div class="container-fluid">
                        <div class="navbar-header">
                            @*<a class="navbar-brand" href="#">WebSiteName</a>*@
                        </div>
                        <div>
                            <ul class="nav navbar-nav">
                                <li class="active">@Html.ActionLink("Hem", "Index", "Home")</li>
