<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="row">
        <header class="col-md-6 col-md-offset-3">
            <div class="col-md-12">
                <h1 class="col-md-5">Fannys Smycken</h1>
                <div class="col-md-4 info">
                    <p><span class="bold">Frakt</span> 49 kr</p>
                    <p><span class="bold">Leveranstid</span>  1-5 arbetsdagar</p>
                </div>
                <div class="col-md-3">
                    <img src="#" alt="Kundkorg" />
                </div>
            </div>
        </header>
        <div class="col-md-6 col-md-offset-3">
            <div>
                @RenderBody()
            </div>
            <hr class="col-md-12" id="bottomLine" />
        </div>

    </div>
    <div class="row">
        <footer class="col-md-12">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 footer-list">
                    <ul class="col-md-3">
                        <li>
                            <h3>KUNDTJÄNST</h3>
                            <ul>
                                <li><a href="#">KONTAKTA OSS</a></li>
                                <li><a href="#">KÖPVILLKOR</a></li>
                                <li><a href="#">RETURER & BYTEN</a></li>
                                <li><a href="#">REKLAMATIONER</a></li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="col-md-3">
                        <li>
                            <h3>INFORMATION</h3>
                            <ul>
                                <li><a href="#">OM FÖRETAGET</a></li>
                                <li><a href="#">VANLIGA FRÅGOR (FAQ)</a></li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="col-md-3">
                        <li>
                            <h3>SOCIALA MEDIER</h3>
                            <ul>
                                <li><a href="#">FACEBOOK</a></li>
                                <li><a href="#">INSTAGRAM</a></li>
                                <li><a href="#">TWITTER</a></li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="col-md-3">
                        <li>
                            <h3>SORTIMENT</h3>
                            <ul>
                                <li><a href="#">ANKELSMYCKEN</a></li>
                                <li><a href="#">ARMBAND</a></li>
                                <li><a href="#">HALSBAND</a></li>
                                <li><a href="#">ÖRHÄNGEN</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)


</body>
</html>


